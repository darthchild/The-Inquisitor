<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ResultActivity"
    android:background="#ffffff">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:navigationIcon="@drawable/arrow_back_black"
                android:background="@color/white"
                android:elevation="5dp"
                app:menu="@menu/main_menu">

            </com.google.android.material.appbar.MaterialToolbar>

        </com.google.android.material.appbar.AppBarLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/score_display_bg"
        android:fontFamily="@font/coolvetica_rg"
        android:textSize="18sp"
        android:textColor="#000000"
        android:letterSpacing="0.05"
        tools:text="superman101"
        android:padding="6sp"
        android:layout_gravity="center"
        />

    <ImageView
        android:layout_width="450px"
        android:layout_height="450px"
        android:contentDescription="logo"
        android:layout_marginTop="100px"
        android:layout_gravity="center"
        android:src="@drawable/rose_sword"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/coolvetica_rg"
        android:text="Congratulations!"
        android:textColor="@color/black"
        android:textSize="33dp"
        android:letterSpacing="0.06"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="You have completed the Inquisition"
        android:fontFamily="@font/coolvetica_rg"
        android:letterSpacing="0.04"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:textSize="20sp"
        />

    <com.google.android.material.card.MaterialCardView
        android:layout_height="115dp"
        android:paddingTop="30dp"
        android:layout_width="300dp"
        app:cardCornerRadius="10dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        app:cardElevation="2dp"
        app:strokeColor="#757575"
        >

        <TextView
            android:id="@+id/tvScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/coolvetica_rg"
            android:letterSpacing="0.07"
            android:textColor="#0E0E0E"
            android:textStyle="bold"
            tools:text="Score: 25"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="28sp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vert"
            android:gravity="center"
            android:layout_marginTop="65dp">

            <TextView
                android:id="@+id/tvRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Right Qs: 5"
                android:fontFamily="@font/coolvetica_rg"
                android:letterSpacing="0.06"
                android:textColor="#05970A"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/tvWrong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Wrong Qs: 2"
                android:fontFamily="@font/coolvetica_rg"
                android:letterSpacing="0.06"
                android:textColor="#EA0C0C"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>



    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnStart"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:text="Finish"
        android:fontFamily="@font/coolvetica_rg"
        android:textSize="24sp"
        android:letterSpacing="0.07"

        />

</LinearLayout>